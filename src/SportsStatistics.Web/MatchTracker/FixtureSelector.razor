<FluentCard>
    <FluentStack Orientation="Orientation.Vertical">

        @if (TodaysFixture is not null)
        {
            <FluentLabel Typo="Typography.Subject" Weight="FontWeight.Bold">
                Today's Fixture
            </FluentLabel>

            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Normal">
                @TodaysFixture.CompetitionName
            </FluentLabel>

            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Normal">
                @TodaysFixture.Opponent
            </FluentLabel>

            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Normal">
                @TodaysFixture.DisplayKickoffTime
            </FluentLabel>

            <FluentButton Appearance="Appearance.Accent" OnClick="StartMatchTracking">
                Start Match
            </FluentButton>
        }
        else
        {
            <FluentLabel Typo="Typography.Subject" Weight="FontWeight.Bold">
                No Fixture Scheduled Today
            </FluentLabel>

            <FluentLabel Typo="Typography.Body" Weight="FontWeight.Normal">
                Please check back later.
            </FluentLabel>
        }

    </FluentStack>
</FluentCard>

@code {
    [Parameter] public FixtureDto? TodaysFixture { get; set; }

    [Parameter] public EventCallback<Guid> OnFixtureSelected { get; set; }

    private async Task StartMatchTracking()
    {
        if (TodaysFixture is not null)
        {
            await OnFixtureSelected.InvokeAsync(TodaysFixture.Id);
        }
    }
}
