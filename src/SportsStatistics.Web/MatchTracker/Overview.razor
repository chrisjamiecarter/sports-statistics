<FluentStack HorizontalAlignment="HorizontalAlignment.Stretch" Orientation="Orientation.Vertical">

    <FluentLabel Typo="Typography.Subject" Weight="FontWeight.Bold">
        Match Overview
    </FluentLabel>

    <FluentDataGrid Items="@OrderedEvents" ShowHover="@true">
        <PropertyColumn Property="@(matchEvent => matchEvent.DisplayMinute)" Title="Minute" />
        <PropertyColumn Property="@(matchEvent => matchEvent.EventType)" Title="Event" />
        <PropertyColumn Property="@(matchEvent => matchEvent.PlayerName)" Title="Player" />
        <PropertyColumn Property="@(matchEvent => matchEvent.OccurredAtUtc.ToLocalTime())" Title="Time" />
    </FluentDataGrid>

</FluentStack>

@code {
    [Parameter] public List<DisplayMatchEventDto> MatchEvents { get; set; } = [];

    private IQueryable<DisplayMatchEventDto> OrderedEvents => MatchEvents.AsQueryable();
}
